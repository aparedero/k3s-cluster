apiVersion: v1
kind: Secret
metadata:
  name: {{ longhorn_map.credentials.backup.secret }}
  namespace: {{ longhorn_vars.kubernetes.namespace }}
  labels:
    app.kubernetes.io/name: {{ longhorn_map.credentials.backup.secret }}
    app.kubernetes.io/part-of: {{ longhorn_vars.kubernetes.helm.chart.name }}
stringData:
  CIFS_PASSWORD: {{ global_map.credentials.longhorn.backup.user.password }}
  CIFS_USERNAME: {{ global_map.credentials.longhorn.backup.user.name }}
type: Opaque
